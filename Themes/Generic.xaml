<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DesktopApp;component/Views/TabStyleResources.xaml" />
    </ResourceDictionary.MergedDictionaries>




    <Style TargetType="{x:Type local:AllViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AllViewBase}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <!--  na przyciski  -->
                            <RowDefinition Height="150" />
                            <!--  na filtrowanie/sortowanie  -->
                            <RowDefinition Height="*" />
                            <!--  na reszte  -->
                        </Grid.RowDefinitions>
                        <!--<ToolBar Style="{StaticResource ToolBarGenericStyle}"> -->
                        <!--  przycisk dodawania  -->
                        <!--
                            <Button Style="{StaticResource ToolBarButtons}" ToolTip="Add new">
                                <Image Source="/Icons/icons8-add-property-50.png" />
                            </Button>
                            <Button Style="{StaticResource ToolBarButtons}" ToolTip="Remove">-->
                        <!--  przycisk odejmowania  -->
                        <!--
                                <Image Source="/Icons/icons8-add-property-50.png" />
                            </Button>
                            <Button Style="{StaticResource ToolBarButtons}" ToolTip="Edit">
                        -->
                        <!--  przycisk edycji  -->
                        <!--
                            <Image Source="/Icons/icons8-add-property-50.png" />
                            </Button>
                            <Button Style="{StaticResource ToolBarButtons}" ToolTip="Refresh">
                        -->
                        <!--  przycisk odswiezania  -->
                        <!--
                                <Image Source="/Icons/icons8-add-property-50.png" />
                            </Button>
                        </ToolBar>-->
                        <Grid Grid.Row="0">
                            <StackPanel
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    Command="{Binding ExportPdfCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Download PDF">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="FilePdfBox" />
                                </Button>

                                <Button
                                    Command="{Binding LoadCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Refresh">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="Refresh" />
                                </Button>

                                <Button
                                    Command="{Binding AddCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Add new">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="Plus" />
                                </Button>

                            </StackPanel>
                        </Grid>


                        <StackPanel Grid.Row="1">
                            <!--<Label> Tu bedzie filtrowanie i sortowanie</Label>-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="45" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="100" />

                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="2,2,2,2"
                                    Content="Sort by:"
                                    FontSize="15"
                                    FontWeight="SemiBold" />
                                <ComboBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    ItemsSource="{Binding SortComboboxItems}"
                                    SelectedValue="{Binding Path=SortField, Mode=TwoWay}" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="0,0,10,0"
                                    Command="{Binding SortCommand}"
                                    Content="Sort" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="2,2,2,2"
                                    Content="Filter by:"
                                    FontSize="15"
                                    FontWeight="SemiBold" />
                                <ComboBox
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    ItemsSource="{Binding FindComboboxItems}"
                                    SelectedValue="{Binding Path=FindField, Mode=TwoWay}" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    Text="{Binding FindTextBox}" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Width="80"
                                    Margin="10,0,10,0"
                                    Command="{Binding FindCommand}"
                                    Content="Find" />


                            </Grid>
                        </StackPanel>
                        <ContentPresenter Grid.Row="2" Style="{StaticResource ContentPresenterGenericStyle}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:SingleViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SingleViewBase}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <StackPanel
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Button
                                    Command="{Binding CloseCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Discard">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="Cancel" />
                                </Button>

                                <Button
                                    Command="{Binding SaveCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Save">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="ContentSaveOutline" />
                                </Button>

                                <Button
                                    Command="{Binding SaveAndCloseCommand}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Save and Close">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Kind="ContentSaveMoveOutline" />
                                </Button>

                            </StackPanel>
                        </Grid>

                        <ScrollViewer
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">

                            <ContentPresenter Style="{StaticResource ContentPresenterGenericStyle}" />

                        </ScrollViewer>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>



