<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.MainPageArticle.DeleteMainPageArticleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <local:SingleViewBase.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </local:SingleViewBase.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!--  TITLE  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Article Title:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding Title}" />

            <!--  IMAGE ALT  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Image Description:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding ImageAlt}" />

            <!--  ACTIONS  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Style="{StaticResource DisplayDeleteStackPanelStyle}">
                <Button
                    Command="{Binding DeleteCommand}"
                    Content="Delete"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
                <Button
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</local:SingleViewBase>

