<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.MainPageArticle.UpdateMainPageArticleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="140" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="450" />
                </Grid.ColumnDefinitions>

                <!--  TITLE  -->
                <Label Content="Title:" Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Column="1"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!--  IMAGE ALT  -->
                <Label
                    Grid.Row="1"
                    Content="Image Description:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding ImageAlt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!--  PUBLISH DATE  -->
                <Label
                    Grid.Row="2"
                    Content="Publish Date:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <DatePicker
                    Grid.Row="2"
                    Grid.Column="1"
                    SelectedDate="{Binding PublishDate, Mode=TwoWay}" />

                <!--  BODY  -->
                <Label
                    Grid.Row="3"
                    Content="Article Body:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="120"
                    AcceptsReturn="True"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding Body, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <!--  IS PUBLISHED  -->
                <Label
                    Grid.Row="4"
                    Content="Published:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <CheckBox
                    Grid.Row="4"
                    Grid.Column="1"
                    IsChecked="{Binding IsPublished, Mode=TwoWay}" />

                <!--  IMAGE  -->
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource StackPanelForImageUpload}">
                    <Image Source="{Binding ImagePreview}" Style="{StaticResource ImageSmall}" />

                    <StackPanel Orientation="Vertical">
                        <Button
                            Margin="10"
                            Command="{Binding UploadImageCommand}"
                            Content="Change Image" />
                        <Button
                            Margin="10"
                            Command="{Binding DeleteImageCommand}"
                            Content="Remove Image" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</local:SingleViewBase>

