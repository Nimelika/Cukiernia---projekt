<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.MainPageArticle.DisplayMainPageArticleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="140" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="450" />
            </Grid.ColumnDefinitions>

            <!--  TITLE  -->
            <Label
                Grid.Row="0"
                Content="Title:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding Title}" />

            <!--  IMAGE ALT  -->
            <Label
                Grid.Row="1"
                Content="Image Description:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding ImageAlt}" />

            <!--  PUBLISH DATE  -->
            <Label
                Grid.Row="2"
                Content="Publish Date:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding PublishDate, StringFormat={}{0:yyyy-MM-dd}}" />

            <!--  BODY  -->
            <Label
                Grid.Row="3"
                Content="Article Body:"
                Style="{StaticResource SemiBoldLabelStyle}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource StandardTextColumnStyle}"
                Text="{Binding Body}"
                TextWrapping="Wrap" />

            <!--  IMAGE + RETURN  -->
            <Border
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="200"
                Height="200"
                Padding="10"
                HorizontalAlignment="Left"
                BorderBrush="#DDD"
                BorderThickness="1">
                <Image Source="{Binding ImagePreview}" Stretch="Uniform" />
            </Border>

            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Style="{StaticResource DisplayDeleteStackPanelStyle}">
                <Button
                    Command="{Binding ReturnCommand}"
                    Content="Return"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
            </StackPanel>

        </Grid>
    </Grid>
</local:SingleViewBase>
