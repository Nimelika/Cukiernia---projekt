<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.UserAccount.DeleteUserAccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!--  EMAIL  -->
                <Label Content="Email:" Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource StandardTextColumnStyle}"
                    Text="{Binding Email}" />

                <!--  DISPLAY NAME  -->
                <Label
                    Grid.Row="1"
                    Content="Name:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource StandardTextColumnStyle}"
                    Text="{Binding DisplayName}" />

                <!--  ROLE  -->
                <Label
                    Grid.Row="2"
                    Content="Role:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource StandardTextColumnStyle}"
                    Text="{Binding RoleName}" />
            </Grid>

            <!--  ACTION BUTTONS  -->
            <StackPanel Grid.Row="3" Style="{StaticResource DisplayDeleteStackPanelStyle}">
                <Button
                    Command="{Binding DeleteCommand}"
                    Content="Delete"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
                <Button
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
            </StackPanel>

        </Grid>
    </Grid>
</local:SingleViewBase>

