<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.UserAccount.CreateUserAccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <!--  EMAIL  -->
        <Label Content="Email:" Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBox
            Grid.Column="1"
            Style="{StaticResource StandardTextBoxStyle}"
            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <!--  DISPLAY NAME  -->
        <Label
            Grid.Row="1"
            Content="Name:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource StandardTextBoxStyle}"
            Text="{Binding DisplayName, Mode=TwoWay}" />
        <!--  PASSWORD  -->
        <Label
            Grid.Row="2"
            Content="Password:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <PasswordBox
            Grid.Row="2"
            Grid.Column="1"
            PasswordChanged="PasswordBox_PasswordChanged"
            Style="{StaticResource StandardPasswordBoxStyle}" />
        <!--  ROLE  -->
        <Label
            Grid.Row="3"
            Content="Role:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            DisplayMemberPath="RoleName"
            ItemsSource="{Binding Roles}"
            SelectedValue="{Binding UserRole, Mode=TwoWay}"
            SelectedValuePath="RoleId"
            Style="{StaticResource StandardComboBoxStyle}" />
    </Grid>
</local:SingleViewBase>
