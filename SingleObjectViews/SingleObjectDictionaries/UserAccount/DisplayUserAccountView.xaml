<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.UserAccount.DisplayUserAccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Label Content="Email:" Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBlock
            Grid.Column="1"
            Style="{StaticResource StandardTextColumnStyle}"
            Text="{Binding Email}" />

        <Label
            Grid.Row="1"
            Content="Name:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource StandardTextColumnStyle}"
            Text="{Binding DisplayName}" />

        <Label
            Grid.Row="2"
            Content="Role:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Style="{StaticResource StandardTextColumnStyle}"
            Text="{Binding RoleName}" />

        <Label
            Grid.Row="3"
            Content="Modules:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Style="{StaticResource StandardTextColumnStyle}"
            Text="{Binding Modules}"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Style="{StaticResource DisplayDeleteStackPanelStyle}">
            <Button
                Command="{Binding ReturnCommand}"
                Content="Return"
                Style="{StaticResource StandardStackPanelButtonStyle}" />
        </StackPanel>
    </Grid>
</local:SingleViewBase>

