<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.TeamMember.UpdateTeamMemberView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <Label Content="Name:" Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Column="1"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Grid.Row="1"
                    Content="Image Description:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding ImageAlt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Grid.Row="2"
                    Content="Description:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="80"
                    AcceptsReturn="True"
                    Style="{StaticResource StandardTextBoxStyle}"
                    Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />

                <Label
                    Grid.Row="3"
                    Content="Active:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <CheckBox
                    Grid.Row="3"
                    Grid.Column="1"
                    IsChecked="{Binding IsActive, Mode=TwoWay}" />

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource StackPanelForImageUpload}">
                    <Image Source="{Binding ImagePreview}" Style="{StaticResource ImageSmall}" />

                    <StackPanel Orientation="Vertical">
                        <Button
                            Margin="10"
                            Command="{Binding UploadImageCommand}"
                            Content="Change Image" />
                        <Button
                            Margin="10"
                            Command="{Binding DeleteImageCommand}"
                            Content="Remove Image" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</local:SingleViewBase>

