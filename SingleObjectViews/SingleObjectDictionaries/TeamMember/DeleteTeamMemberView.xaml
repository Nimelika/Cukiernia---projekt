<local:SingleViewBase x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.TeamMember.DeleteTeamMemberView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:local="clr-namespace:DesktopApp.Views"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 d:DesignHeight="450"
 d:DesignWidth="800"
 mc:Ignorable="d">


        <UserControl.Resources>
            <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
        </UserControl.Resources>

        <Grid>
            <StackPanel>
                <TextBlock Text="Are you sure you want to delete this team member?" />
                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,10,0,10" />

                <StackPanel Orientation="Horizontal">
                    <Button Content="Delete" Command="{Binding DeleteCommand}" />
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="10,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </local:SingleViewBase>
