<local:SingleViewBase x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.TeamMember.DisplayTeamMemberView"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:local="clr-namespace:DesktopApp.Views"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 d:DesignHeight="450"
 d:DesignWidth="800"
 mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name}" Style="{StaticResource StandardTextColumnStyle}" />
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,10,0,10" />
            <Image Source="{Binding ImagePreview}" Stretch="Uniform"/>
            <Button Content="Return" Command="{Binding ReturnCommand}" />
        </StackPanel>
    </Grid>
    </local:SingleViewBase>

