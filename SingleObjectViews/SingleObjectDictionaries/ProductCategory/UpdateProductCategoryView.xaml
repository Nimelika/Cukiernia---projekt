<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.ProductCategory.UpdateProductCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Content="Product Category Name:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource StandardTextBoxStyle}"
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" />

        <Label
            Grid.Row="1"
            Content="Image Description:"
            Style="{StaticResource SemiBoldLabelStyle}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource StandardTextBoxStyle}"
            Text="{Binding ImageAlt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource StackPanelForImageUpload}">
            <Image Source="{Binding ImagePreview}" Style="{StaticResource ImageSmall}" />

            <StackPanel Orientation="Vertical">
                <Button
                    Margin="10"
                    Command="{Binding UploadImageCommand}"
                    Content="Upload Image" />
                <Button
                    Margin="10"
                    Command="{Binding DeleteImageCommand}"
                    Content="Delete Image" />
            </StackPanel>
        </StackPanel>

    </Grid>
</local:SingleViewBase>
