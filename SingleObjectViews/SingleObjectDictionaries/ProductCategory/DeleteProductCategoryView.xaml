<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.ProductCategory.DeleteProductCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <local:SingleViewBase.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </local:SingleViewBase.Resources>
    <Grid>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Category Name:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource StandardTextColumnStyle}"
                    Text="{Binding CategoryName}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Image Alt:"
                    Style="{StaticResource SemiBoldLabelStyle}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Style="{StaticResource StandardTextColumnStyle}"
                    Text="{Binding ImageAlt}" />
            </Grid>
            <StackPanel Grid.Row="2" Style="{StaticResource DisplayDeleteStackPanelStyle}">
                <Button
                    Command="{Binding DeleteCommand}"
                    Content="Delete"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
                <Button
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource StandardStackPanelButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</local:SingleViewBase>
