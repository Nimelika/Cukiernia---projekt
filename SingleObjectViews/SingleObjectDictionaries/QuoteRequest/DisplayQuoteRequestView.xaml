<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.QuoteRequest.DisplayQuoteRequestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid Margin="10">
        <StackPanel Margin="10" Orientation="Vertical">

            <!--  =========================  -->
            <!--  QUOTE REQUEST DETAILS  -->
            <!--  =========================  -->

            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Quote Request Details" />

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Quote ID:" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding QuoteId}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Customer:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding Customer}" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Guest Name:" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding GuestName}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Guest Email:" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="{Binding GuestEmail}" />

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Phone:" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Text="{Binding Phone}" />

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Description:" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Text="{Binding Description}"
                    TextWrapping="Wrap" />

                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Content="Delivery Date:" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Text="{Binding DesiredDeliveryDate}" />

                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    Content="Status:" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="1"
                    Text="{Binding Status}" />

                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    Content="Converted to Order:" />
                <CheckBox
                    Grid.Row="8"
                    Grid.Column="1"
                    IsChecked="{Binding IsConvertedToOrder, Mode=OneWay}"
                    IsEnabled="False" />
            </Grid>

            <!--  =========================  -->
            <!--  IMAGE  -->
            <!--  =========================  -->

            <TextBlock
                Margin="0,20,0,10"
                FontSize="16"
                FontWeight="SemiBold"
                Text="Uploaded Image" />

            <Border
                Padding="10"
                HorizontalAlignment="Left"
                BorderBrush="#CCC"
                BorderThickness="1">

                <Image
                    Height="250"
                    Source="{Binding ImagePreview}"
                    Stretch="Uniform" />
            </Border>

            <!--  =========================  -->
            <!--  ACTIONS  -->
            <!--  =========================  -->

            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Width="120"
                    Command="{Binding ReturnCommand}"
                    Content="Return" />
            </StackPanel>

        </StackPanel>
    </Grid>
</local:SingleViewBase>
