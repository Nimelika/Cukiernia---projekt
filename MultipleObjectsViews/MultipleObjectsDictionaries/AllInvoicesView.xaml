<local:AllViewBase
    x:Class="DesktopApp.Views.MultipleObjectsViews.MultipleObjectsDictionaries.AllInvoicesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="1"
            AlternationCount="1000"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnHeaderStyle="{StaticResource StandardDataGridHeaderStyle}"
            IsReadOnly="True"
            ItemsSource="{Binding List}"
            SelectedItem="{Binding SelectedInvoice}">

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="#2D2424" />
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFE2DCD5" />
                            <Setter Property="Foreground" Value="#2D2424" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>

                <DataGridTextColumn Width="60" Binding="{Binding Position}" Header="Pos" />
                <DataGridTextColumn Width="160" Binding="{Binding InvoiceNumber}" Header="Invoice No" />
                <DataGridTextColumn Width="100" Binding="{Binding OrderId}" Header="Order ID" />
                <DataGridTextColumn Width="140" Binding="{Binding InvoiceDate}" Header="Invoice Date" />
                <DataGridTextColumn Width="120" Binding="{Binding TotalNet}" Header="Net" />
                <DataGridTextColumn Width="120" Binding="{Binding TotalVat}" Header="VAT" />
                <DataGridTextColumn Width="120" Binding="{Binding TotalGross}" Header="Gross" />
                <DataGridTextColumn Width="160" Binding="{Binding PaymentMethod}" Header="Payment Method" />
                <DataGridCheckBoxColumn
    Width="80"
    Binding="{Binding IsPaid, Mode=OneWay}"
    Header="Paid"
    IsReadOnly="True" />

                <DataGridTextColumn Width="140" Binding="{Binding CreatedAt}" Header="Created" />
                <DataGridTextColumn Width="140" Binding="{Binding DueDate}" Header="Due Date" />
                <DataGridTextColumn Width="140" Binding="{Binding PaidAt}" Header="Paid At" />

                <!-- ACTIONS -->
                <DataGridTemplateColumn Width="Auto" Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource ActionsStackPanelStyle}">
                                <Button
                                    Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Display"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                                <Button
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Update"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                                <Button
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>

