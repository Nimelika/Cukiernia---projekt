<local:AllViewBase
    x:Class="DesktopApp.Views.MulitipleObjectsViews.MulitipleObjectsDictionaries.AllCelebrationCakesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="1"
            AlternationCount="1000"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnHeaderStyle="{StaticResource StandardDataGridHeaderStyle}"
            IsReadOnly="True"
            ItemsSource="{Binding List}"
            SelectedItem="{Binding SelectedCelebrationCake}">

            <DataGrid.Columns>

                <!--  Position  -->
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Position}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Pos" />

                <!--  ID  -->
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding CelebrationCakeId}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="ID" />

                <!--  Image  -->
                <DataGridTemplateColumn Width="120" Header="Image">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="100"
                                Height="100"
                                Source="{Binding ImagePreview}"
                                Stretch="Uniform" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Image Alt  -->
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding ImageAlt}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Image Alt" />

                <!--  Name  -->
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Name}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Name" />

                <!--  Description  -->
                <DataGridTextColumn
                    Width="250"
                    Binding="{Binding Description}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Description" />

                <!--  Cake Filling  -->
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding CakeFilling}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Cake Filling" />

                <!--  Prices  -->
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding PriceSmall}"
                    Header="Price (S)" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding PriceMedium}"
                    Header="Price (M)" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding PriceLarge}"
                    Header="Price (L)" />

                <!--  FLAGS (SAFE: OneWay + Disabled)  -->

                <DataGridTemplateColumn Header="Nuts">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding WithNuts, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Fruits">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding WithFruits, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Alcohol">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding WithAlcohol, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Vegan">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding Vegan, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Low Sugar">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding LowSugar, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="No Sugar">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding NoSugar, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Wedding">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding WeddingOffer, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Children">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding ChildrenOffer, Mode=OneWay}"
                                IsEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  ACTION  -->
                <DataGridTemplateColumn Width="Auto" Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource ActionsStackPanelStyle}">
                                <Button
    Command="{Binding DataContext.DisplayCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
    CommandParameter="{Binding}"
    Content="Display"
    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                                <Button
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Update"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                                <Button
Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding}"
Content="Delete"
Style="{StaticResource ActionsStackPanelButtonStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
