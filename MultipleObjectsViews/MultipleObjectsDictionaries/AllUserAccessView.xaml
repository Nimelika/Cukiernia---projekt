<local:AllViewBase
    x:Class="DesktopApp.Views.MultipleObjectsViews.MultipleObjectsDictionaries.AllUserAccessView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnHeaderStyle="{StaticResource StandardDataGridHeaderStyle}"
            ItemsSource="{Binding List}"
            SelectedItem="{Binding SelectedUser, Mode=TwoWay}">

            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Position}"
                    Header="Position" />

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Email}"
                    Header="Email" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding DisplayName}"
                    Header="Name" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding RoleName}"
                    Header="Role" />



                <DataGridTemplateColumn Width="Auto" Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource ActionsStackPanelStyle}">
                                <Button
                                    Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" 
                                    Content="Details" />

                                <Button                                    
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" 
                                    Content="Update" />
                                <Button
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>

