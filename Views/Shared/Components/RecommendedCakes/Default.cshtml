@model List<MakeAWishDB.Entities.CelebrationCake>

<div class="container center center-align">
    <h3 class="blue-grey-text text-darken-4">NAJCZĘŚCIEJ WYBIERANE</h3>

    <div class="row">
        @foreach (var cake in Model)
        {
            <div class="col s12 m6 l3">
                <div class="card large">
                    <div class="card-image">
                        <img src="@cake.ImageUrl" alt="@cake.ImageAlt" />
                    </div>

                    <div class="card-content">
                        <span class="card-title">@cake.Name</span>

                        @* show price (if any) *@
                        @if (cake.PriceSmall.HasValue)
                        {
                            <p>od @cake.PriceSmall.Value PLN</p>
                        }

                        <a href="#" class="btn-floating amber darken-3 pulse">
                            <i class="material-icons right">shopping_cart</i>
                        </a>
                    </div>

                    <div class="card-action">
                        <a class="amber-text text-darken-3" href="#">SZCZEGÓŁY</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
