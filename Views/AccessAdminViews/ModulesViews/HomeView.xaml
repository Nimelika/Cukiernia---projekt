<UserControl x:Class="DesktopApp.Views.AccessAdminViews.ModulesViews.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
    Text="{Binding WelcomeText}"
    FontSize="32"
    FontWeight="Bold"
            Margin="10"
    HorizontalAlignment="Center"
    Foreground="#4A4947"/>

        <!-- Permissions panel -->
        <GroupBox
            Grid.Row="1"
            Header="Your access rights"
            Padding="10">

            <ItemsControl ItemsSource="{Binding Permissions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                    Text="{Binding Name}"
                    VerticalAlignment="Center"/>

                            <!--  gdy HasAccess = true -->
                            <TextBlock
                    Grid.Column="1"
                    Text="✔"
                    FontSize="16"
                    
                    Foreground="#427A43"
                    VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasAccess}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- gdy HasAccess = false -->
                            <TextBlock
                    Grid.Column="1"
                    Text="✖"
                    FontSize="16"
                   
                    Foreground="#C3110C"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasAccess,
                                         Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </GroupBox>
    </Grid>

</UserControl>
