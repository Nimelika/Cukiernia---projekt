<local:AllViewBase
    x:Class="DesktopApp.Views.MultipleObjectsViews.MultipleObjectsDictionaries.AllQuoteRequestsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding List}"
            SelectedItem="{Binding SelectedQuote}"
            AlternationCount="1000"
            ColumnHeaderStyle="{StaticResource StandardDataGridHeaderStyle}">

            <!-- by nie kolor czcionki nie zmienial sie na bialy -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="#2D2424" />
                    <Setter Property="Background" Value="Transparent" />

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFE2DCD5" />
                            <Setter Property="Foreground" Value="#2D2424" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Position}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Position" />

                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding QuoteId}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Quote ID" />

                <DataGridTextColumn
                    Width="180"
                    Binding="{Binding Customer}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Customer" />

                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding GuestName}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Guest Name" />

                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding GuestEmail}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Guest Email" />

                <DataGridTextColumn
                    Width="140"
                    Binding="{Binding Phone}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Phone" />

                <DataGridTextColumn
                    Width="250"
                    Binding="{Binding Description}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Description" />

                <DataGridTextColumn
                    Width="160"
                    Binding="{Binding DesiredDeliveryDate}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Delivery Date" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Status}"
                    ElementStyle="{StaticResource StandardTextColumnStyle}"
                    Header="Status" />

                <DataGridCheckBoxColumn
                    Width="170"
                    Binding="{Binding IsConvertedToOrder, Mode=OneWay}"
                    Header="Converted to Order"
                    IsReadOnly="True" />

                <DataGridTemplateColumn Width="120" Header="Image">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="80"
                                Height="80"
                                Source="{Binding ImagePreview}"
                                Stretch="Uniform" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 🔹 ACTIONS: DISPLAY / UPDATE / DELAYED -->
                <DataGridTemplateColumn Width="Auto" Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Style="{StaticResource ActionsStackPanelStyle}">
                                <Button
                                    Content="Display"
                                    Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />

                                <Button
                                    Content="Update"
                                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />

                                <Button
                                    Content="Delete"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActionsStackPanelButtonStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>


