<local:AllViewBase
    x:Class="DesktopApp.Views.MulitipleObjectsViews.MulitipleObjectsDictionaries.AllRegionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <DataGrid
                AlternationCount="1000"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ColumnHeaderStyle="{StaticResource StandardDataGridHeaderStyle}"
                ItemsSource="{Binding List}"
                SelectedItem="{Binding SelectedRegion, Mode=TwoWay}">

             

                <DataGrid.Columns>
  
                    <DataGridTextColumn
                        ElementStyle="{StaticResource StandardTextColumnStyle}"
                        Width="SizeToHeader"
                        Binding="{Binding Position}"
                        Header="Position" />

                    <DataGridTextColumn
                        ElementStyle="{StaticResource StandardTextColumnStyle}"
                        Width="Auto"
                        Binding="{Binding RegionName}"
                        Header="Abbreviation" />

                    <DataGridTextColumn
                        ElementStyle="{StaticResource StandardTextColumnStyle}"
                        Width="Auto"
                        Binding="{Binding CountryName}"
                        Header="Country Name" />

                    <!--  Action buttons column  -->
                    <DataGridTemplateColumn Width="Auto" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Style="{StaticResource ActionsStackPanelStyle}">
                                    <Button
                                        Style="{StaticResource ActionsStackPanelButtonStyle}"
                                        Command="{Binding DataContext.DetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Details" />
                                    <Button
                                        Style="{StaticResource ActionsStackPanelButtonStyle}"
                                        Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Update" />
                                    <Button
                                        Style="{StaticResource ActionsStackPanelButtonStyle}"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</local:AllViewBase>
