<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vmmdrr="clr-namespace:DesktopApp.ViewModels.SingleObjectViewModels.SingleObjectDictionariesVM.RegionVM"
    xmlns:vs="clr-namespace:DesktopApp.Views.SingleObjectViews">

    <DataTemplate DataType="{x:Type vmmdrr:DeleteRegionViewModel}">
        <vs:DeleteRegionView />
    </DataTemplate>



    <Style x:Key="WithSpanColumn3" TargetType="{x:Type Grid}">
        <Setter Property="Grid.ColumnSpan" Value="3" />
    </Style>

    <Style x:Key="GridWithMarign3" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="3" />
    </Style>

    <Style x:Key="StackPanelForImageUpload" TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>









    <Style x:Key="WithMarign1" TargetType="{x:Type Control}">
        <Setter Property="Margin" Value="1" />
    </Style>

    <Style x:Key="StackPanelGenericStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="1" />
        <Setter Property="Background" Value="BlanchedAlmond" />
    </Style>

    <Style x:Key="ContentPresenterGenericStyle" TargetType="{x:Type ContentPresenter}">
        <Setter Property="Margin" Value="0,5,0,5" />
        <Setter Property="ClipToBounds" Value="False" />
    </Style>





    <Style x:Key="StandardLabelRightStyle" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="HorizontalContentAlignment" Value="Right" />
    </Style>

    <Style x:Key="StandardLabelCenterStyle" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>


    <Style x:Key="WithMarign4" TargetType="{x:Type Control}">
        <Setter Property="Margin" Value="4" />
    </Style>

    <Style x:Key="ItemInError" TargetType="{x:Type Control}">
        <Setter Property="Margin" Value="0,2,5,2" />
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="true">
                <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ImageSmall" TargetType="{x:Type Image}">
        <Setter Property="Margin" Value="10,5,10,5" />
        <Setter Property="Width" Value="145" />
        <Setter Property="Height" Value="145" />
        <Setter Property="Stretch" Value="Uniform" />

    </Style>
    <Style x:Key="DatePickerInError" TargetType="{x:Type DatePicker}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="LightGoldenrodYellow" />
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="true">
                <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)[0].ErrorContent}" />
            </Trigger>
        </Style.Triggers>

    </Style>



    <Style x:Key="DisplayDeleteStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,20,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="ActionsStackPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style
        x:Key="StandardStackPanelButtonStyle"
        BasedOn="{StaticResource MaterialDesignRaisedButton}"
        TargetType="Button">
        <Setter Property="Margin" Value="10,5,10,5" />
    </Style>
    <Style
        x:Key="ActionsStackPanelButtonStyle"
        BasedOn="{StaticResource MaterialDesignRaisedButton}"
        TargetType="Button">
        <Setter Property="Margin" Value="5,0" />
    </Style>

    <Style
        x:Key="StandardDataGridHeaderStyle"
        BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}"
        TargetType="DataGridColumnHeader">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="TextBlock.FontSize" Value="15" />
    </Style>

    <Style x:Key="StandardTextColumnStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="TextBlock.FontSize" Value="15" />
    </Style>
    <Style
        x:Key="StandardTextBoxStyle"
        BasedOn="{StaticResource MaterialDesignTextBox}"
        TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="TextBlock.FontSize" Value="15" />
    </Style>

    <Style
        x:Key="StandardComboBoxStyle"
        BasedOn="{StaticResource MaterialDesignComboBox}"
        TargetType="ComboBox">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="TextBlock.FontSize" Value="15" />
    </Style>

    <Style x:Key="StandardLabelStyle" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="TextBlock.FontSize" Value="15" />
    </Style>

    <Style x:Key="SemiBoldLabelStyle" TargetType="Label">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="TextBlock.FontSize" Value="15" />
        <Setter Property="TextBlock.FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="MaterialDesignToolButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="#607D8B" />

        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="18"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSurfaceVariant}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MaterialDesignPrimaryContainer}" />
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignOnPrimaryContainer}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>


