@model PortalWWW.Models.ContactPageViewModel

@{
    ViewData["Title"] = Model.Header;
}

<div class="parallax-container hero">
    <div class="parallax">
        <img src="@Url.Content(Model.HeroImagePath ?? "~/img/default-hero.jpg")"
             alt="@Model.HeroImageAlt" />
    </div>
</div>

<h1 class="center blue-grey-text text-darken-4">@Model.Header</h1>
@if (TempData["ContactSuccess"] != null)
{
    <div class="card-panel green lighten-4 green-text text-darken-4 center">
        <strong>@TempData["ContactSuccess"]</strong>
    </div>
}


<div class="container">
    <div class="row">

        <!-- SHOP INFO -->
        <div class="col s12 l6">
            <h5>Head Office</h5>

            <p>
                @Model.StreetAddress<br />
                @Model.PostalCode @Model.City<br />
                Phone: @Model.PhoneNumber<br />
                Email: @Model.Mail
            </p>

            <iframe src="@Model.GoogleMapsUrl"
                    width="100%" height="300"
                    style="border:0;"
                    loading="lazy"></iframe>
        </div>

        <!-- CONTACT FORM -->
        <div class="col s12 l6">
            <form asp-action="Contact" method="post">
                @Html.AntiForgeryToken()

                <div class="card-panel amber lighten-5">

                    <h5>Contact form</h5>

                    <div class="input-field">
                        <input asp-for="FullName" />
                        <label asp-for="FullName">Full name</label>
                        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "red-text" })
                    </div>

                    <div class="input-field">
                        <input asp-for="Email" />
                        <label asp-for="Email">Email</label>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text" })
                    </div>

                    <div class="input-field">
                        <input asp-for="Phone" />
                        <label asp-for="Phone">Phone</label>
                    </div>

                    <div class="input-field">
                        <input asp-for="Subject" />
                        <label asp-for="Subject">Subject</label>
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "red-text" })
                    </div>

                    <div class="input-field">
                        <textarea asp-for="MessageText" class="materialize-textarea"></textarea>
                        <label asp-for="MessageText">Message</label>
                        @Html.ValidationMessageFor(m => m.MessageText, "", new { @class = "red-text" })
                    </div>

                    <p>
                        <label>
                            <input type="checkbox" asp-for="AcceptRodo" />
                            <span>I agree to the privacy policy</span>
                        </label>
                        @Html.ValidationMessageFor(m => m.AcceptRodo, "", new { @class = "red-text" })
                    </p>

                    <p>
                        <label>
                            <input type="checkbox" asp-for="AcceptTerms" />
                            <span>I accept the terms and conditions</span>
                        </label>
                        @Html.ValidationMessageFor(m => m.AcceptTerms, "", new { @class = "red-text" })
                    </p>

                    <div class="center">
                        <button type="submit" class="btn blue-grey darken-3">
                            Send message
                        </button>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
