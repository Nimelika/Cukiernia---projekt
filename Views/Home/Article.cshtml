@model PortalWWW.Models.PageContentViewModel

@{
    ViewData["Title"] = Model.Header;
}

<div class="container" style="margin-top:30px;">
    <img src="/img/cookies.jpg"
         alt="@Model.Header"
         class="responsive-img"
         style="width:100%; max-height:360px; object-fit:cover;" />
</div>

<h1 class="center blue-grey-text text-darken-4" style="margin-top:30px;">
    @Model.Header
</h1>

<div class="container blue-grey-text text-darken-4"
     style="text-align:justify; margin-bottom:40px;">

    @foreach (var item in Model.Sections)
    {
        <div class="content-block" style="margin-bottom:25px;">
            @if (!string.IsNullOrWhiteSpace(item.Title))
            {
                <h5>@item.Title</h5>
            }
            <p>@item.Content</p>
        </div>
    }

</div>
