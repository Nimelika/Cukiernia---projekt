@model PortalWWW.Models.OurShopsPageViewModel

@{
    ViewData["Title"] = Model.Header;
}

<div class="parallax-container hero">
    <div class="parallax">
        <img src="@Url.Content(Model.HeroImagePath ?? "~/img/default-hero.jpg")"
             alt="@Model.HeroImageAlt" />
    </div>
</div>

<h1 class="center blue-grey-text text-darken-4">@Model.Header</h1>

<div class="container center-align">
    <div class="row">

        @foreach (var shop in Model.Shops)
        {
            <div class="col s12 m12 l6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">

                        <span class="card-title">
                            @shop.City, @shop.StreetAddress
                        </span>

                        <p><strong>Opening hours:</strong></p>

                        <p>
                            Mon–Fri: @shop.OpeningHoursMdFr
                        </p>

                        <p>
                            Sat: @shop.OpeningHoursSt
                        </p>

                        <p>
                            Phone: @shop.PhoneNumber
                        </p>
                    </div>

                    <div class="card-action">
                        <iframe src="@shop.GoogleMapsUrl"
                                width="100%" height="300"
                                style="border:0;"
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
