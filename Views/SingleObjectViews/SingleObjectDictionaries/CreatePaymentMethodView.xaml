<local:SingleViewBase x:Class="DesktopApp.Views.SingleObjectViews.CreatePaymentMethodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml"/>
    </UserControl.Resources>

    <Grid Style="{StaticResource MainBackground}">
        <Grid>
            <Grid Style="{StaticResource IvoryBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Content="Payment Method:"/>
                <TextBox Grid.Column="1" Style="{StaticResource WithMarign1}" Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </Grid>
    </Grid>
</local:SingleViewBase>



