<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.Order.UpdateOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DesktopApp.Views">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid Margin="10">
        <StackPanel>

            <!-- ORDER DATA -->
            <Grid Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Order Date:"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding OrderDate}"/>

                <Label Grid.Row="1" Content="Customer:"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                          ItemsSource="{Binding CustomerComboBoxItems}"
                          SelectedValue="{Binding Customer}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"/>

                <Label Grid.Row="2" Content="Guest Name:"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding GuestName}"/>

                <Label Grid.Row="3" Content="Guest Email:"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding GuestEmail}"/>

                <Label Grid.Row="4" Content="Guest Phone:"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding GuestPhone}"/>

                <Label Grid.Row="5" Content="Shop:"/>
                <ComboBox Grid.Row="5" Grid.Column="1"
                          ItemsSource="{Binding ShopComboBoxItems}"
                          SelectedValue="{Binding Shop}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"/>

                <Label Grid.Row="6" Content="Collection Date:"/>
                <DatePicker Grid.Row="6" Grid.Column="1"
                            SelectedDate="{Binding CollectionDate}"/>

                <Label Grid.Row="7" Content="Paid:"/>
                <CheckBox Grid.Row="7" Grid.Column="1"
                          IsChecked="{Binding IsPaid}"/>

                <Label Grid.Row="8" Content="Status:"/>
                <ComboBox Grid.Row="8" Grid.Column="1"
                          ItemsSource="{Binding StatusComboBoxItems}"
                          SelectedValue="{Binding Status}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"/>
            </Grid>

            <!-- ORDER ITEMS READ‑ONLY -->
            <TextBlock Text="Order Items (Read Only)" FontWeight="SemiBold" Margin="0,10,0,5"/>

            <DataGrid ItemsSource="{Binding OrderItems}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="200">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding OrderItemId}"/>
                    <DataGridTextColumn Header="Cake" Binding="{Binding CelebrationCake}"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding CelebrationCakeSize}"/>
                    <DataGridTextColumn Header="Text" Binding="{Binding PersonalizedText}"/>
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</local:SingleViewBase>
