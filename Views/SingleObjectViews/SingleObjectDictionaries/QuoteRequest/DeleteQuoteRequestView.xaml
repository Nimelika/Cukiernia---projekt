<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.QuoteRequest.DeleteQuoteRequestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <local:SingleViewBase.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </local:SingleViewBase.Resources>

    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Margin="10">

            <TextBlock
                Text="Delete Quote Request"
                FontSize="16"
                FontWeight="SemiBold"
                Margin="0,0,0,10" />

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Quote ID:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding QuoteId}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Customer:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Customer}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Guest Name:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding GuestName}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Guest Email:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding GuestEmail}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Phone:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Phone}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Description:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="5" Grid.Column="1"
                           Text="{Binding Description}"
                           TextWrapping="Wrap"
                           Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Delivery Date:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding DesiredDeliveryDate}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Status:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Status}" Style="{StaticResource StandardTextColumnStyle}"/>

                <Label Grid.Row="8" Grid.Column="0" Content="Converted to Order:" Style="{StaticResource SemiBoldLabelStyle}"/>
                <CheckBox Grid.Row="8" Grid.Column="1"
                          IsChecked="{Binding IsConvertedToOrder, Mode=OneWay}"
    IsEnabled="False"/>
            </Grid>

            <TextBlock
                Text="Uploaded Image"
                FontWeight="SemiBold"
                Margin="0,20,0,10"/>

            <Border BorderBrush="#CCC" BorderThickness="1" Padding="10">
                <Image Source="{Binding ImagePreview}"
                       Height="200"
                       Stretch="Uniform"/>
            </Border>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Style="{StaticResource DisplayDeleteStackPanelStyle}">

                <Button
                    Content="Delete"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource StandardStackPanelButtonStyle}"/>

                <Button
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource StandardStackPanelButtonStyle}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</local:SingleViewBase>

