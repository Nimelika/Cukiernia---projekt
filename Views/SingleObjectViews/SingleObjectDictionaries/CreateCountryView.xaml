<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.CreateCountryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid Style="{StaticResource MainBackground}">
        <Grid>
            <Grid Style="{StaticResource IvoryBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="2" Content="Country Name:" />
                <Label Grid.Column="0" Content="Country Abbreviation:" />
                <TextBox
                    Grid.Column="1"
                    Style="{StaticResource ItemInError}"
                    Text="{Binding Path=CountryAbbreviation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" />
                <TextBox
                    Grid.Column="3"
                    Style="{StaticResource ItemInError}"
                    Text="{Binding Path=CountryName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" />
            </Grid>
        </Grid>
    </Grid>
</local:SingleViewBase>



