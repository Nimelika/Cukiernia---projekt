<local:SingleViewBase
    x:Class="DesktopApp.Views.SingleObjectViews.SingleObjectDictionaries.ProductCategory.DisplayProductCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Views/TabStyleResources.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Content="Category Name:" Style="{StaticResource SemiBoldLabelStyle}"/>
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Style="{StaticResource StandardTextColumnStyle}"
                       Text="{Binding CategoryName}"/>

            <Label Grid.Row="1" Content="Image Description:" Style="{StaticResource SemiBoldLabelStyle}"/>
            <TextBlock Grid.Row="1" Grid.Column="1"
                       Style="{StaticResource StandardTextColumnStyle}"
                       Text="{Binding ImageAlt}"/>

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    BorderBrush="#DDD" BorderThickness="1" Padding="10"
                    HorizontalAlignment="Left" Width="200" Height="200">
                <Image Source="{Binding ImagePreview}" Stretch="Uniform"/>
            </Border>

            <StackPanel Grid.Row="2" Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DisplayDeleteStackPanelStyle}">
                <Button Style="{StaticResource StandardStackPanelButtonStyle}"
                        Command="{Binding ReturnCommand}"
                        Content="Return"/>
            </StackPanel>

        </Grid>
    </Grid>
</local:SingleViewBase>

